<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".EndGame">

    <Button
        android:id="@+id/EGBut"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/carter_one"
        android:text="BACK TO MAIN MENU"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/EGsub1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAdding"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/carter_one"
        android:textAlignment="center"
        android:textColor="@color/colorAdding"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EGsco" />

    <TextView
        android:id="@+id/EGsco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/carter_one"
        android:text="YOUR SCORE"
        android:textColor="@color/ic_launcher_background"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EGTitle2" />

    <TextView
        android:id="@+id/EGTitle2"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:fontFamily="@font/baloo_da"
        android:text="YOU HAVE FINISHED THE GAME"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EGTitle1" />

    <TextView
        android:id="@+id/EGTitle1"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/baloo_da"
        android:text="AWESOME!!"
        android:textAlignment="center"
        android:textColor="@color/colorAdding"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>