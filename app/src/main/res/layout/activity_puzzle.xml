<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:backgroundTint="@color/colorPrimary"
    android:foregroundTint="@color/colorPrimary"
    tools:context=".Puzzle">

    <ImageButton
        android:id="@+id/PuzzlePic2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_chicken_foreground" />

    <ImageButton
        android:id="@+id/PuzzlePic4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PuzzlePic2"
        app:srcCompat="@mipmap/ic_duck_foreground" />

    <ImageButton
        android:id="@+id/PuzzlePic3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintEnd_toStartOf="@+id/PuzzlePic4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PuzzlePic1"
        app:srcCompat="@mipmap/ic_sheep_foreground" />

    <ImageButton
        android:id="@+id/PuzzlePic1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintEnd_toStartOf="@+id/PuzzlePic2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_horse_foreground" />

    <TextView
        android:id="@+id/PuzzleLife"
        android:layout_width="43dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/carter_one"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/PuzzleX"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PuzzleTitle"
        android:layout_width="274dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/baloo_da"
        android:text="WHICH ONE IS A SHEEP ? "
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PuzzleScore"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/carter_one"
        android:text="SCORE "
        android:textAlignment="textEnd"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PuzzleBoard"
        android:layout_width="88dp"
        android:layout_height="62dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/carter_one"
        android:textAlignment="textEnd"
        android:textColor="@color/colorAdding"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PuzzleScore" />

    <ImageButton
        android:id="@+id/PuzzleHeart"
        android:layout_width="76dp"
        android:layout_height="68dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_heart_foreground" />

    <TextView
        android:id="@+id/PuzzleX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/carter_one"
        android:text="X"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/PuzzleHeart"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>